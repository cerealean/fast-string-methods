{
  "name": "fast-string-methods",
  "version": "1.0.0",
  "description": "JavaScript library that provides efficient tools for string comparison. Many of the built-in JavaScript string methods and tools are functional but not always very efficient. This library seeks to remedy this.",
  "main": "lib/index.cjs",
  "module": "lib/index.mjs",
  "browser": "lib/index.umd.js",
  "scripts": {
    "test": "jest",
    "test-watch": "npm run test -- --watchAll",
    "prebuild": "rimraf ./lib",
    "build": "rollup -c",
    "postbuild": "cpy package.json lib/",
    "dev": "npm run build -- -w",
    "prebenchmark-test": "npm run build",
    "benchmark-test": "tsx ./benchmarks/benchmarks.ts"
  },
  "keywords": [
    "string",
    "string search",
    "string methods",
    "string tools",
    "string utilities",
    "search",
    "node"
  ],
  "author": "Michael Crawford",
  "license": "ISC",
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@swc/core": "^1.4.2",
    "@swc/helpers": "^0.5.6",
    "@swc/jest": "^0.2.36",
    "@types/benchmark": "^2.1.5",
    "@types/uglify-js": "^3.17.4",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "benchmark": "^2.1.4",
    "cpy-cli": "^5.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-ts": "^3.4.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "uglify-js": "^3.17.4"
  }
}
